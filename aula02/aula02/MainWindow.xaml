<Window x:Class="aula02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aula02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFAFAFAF" Offset="1"/>
                <GradientStop Color="White" Offset="0.341"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Button x:Name="btn_link" Content="Proxima Janela" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="120" Width="250" Foreground="White" BorderBrush="{x:Null}">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEF1E1E"/>
                    <GradientStop Color="#FF8C0000" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
