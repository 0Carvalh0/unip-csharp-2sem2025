<Window x:Class="aula05A.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aula05A"
        mc:Ignorable="d"
        Title="StackPanel" Height="500" Width="1020">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.ColumnSpan="1" Grid.Column="0" Grid.RowSpan="1">
            <Button Content="My Long String" Margin="10" Padding="10" HorizontalAlignment="Left" />
            <Button Content="My Long String" Margin="10" Padding="10" HorizontalAlignment="Center"/>
            <Button Content="My Long String" Margin="10" Padding="10" HorizontalAlignment="Right"/>
            <Button Content="My Long String" Margin="10" Padding="10" HorizontalAlignment="Stretch" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="1" Grid.Column="1" Grid.RowSpan="1">  
            <Button Content="My Long String" Margin="10" Padding="10" VerticalAlignment="Top" />
            <Button Content="My Long String" Margin="10" Padding="10" VerticalAlignment="Center"/>
            <Button Content="My Long String" Margin="10" Padding="10" VerticalAlignment="Bottom"/>
            <Button Content="My Long String" Margin="10" Padding="10"  VerticalAlignment="Stretch" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.ColumnSpan="1" Grid.Column="0" Grid.Row="2" Grid.RowSpan="1">
            <Button Content="My Long String" Margin="10" Padding="10" HorizontalContentAlignment="Left" />
            <Button Content="My Long String" Margin="10" Padding="10" HorizontalContentAlignment="Center"/>
            <Button Content="My Long String" Margin="10" Padding="10" HorizontalContentAlignment="Right"/>
            <Button Content="My Long String" Margin="10" Padding="10" HorizontalContentAlignment="Stretch" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="2" Grid.RowSpan="1">
            <Button Content="My Long String" Margin="10" Padding="10" VerticalContentAlignment="Top" />
            <Button Content="My Long String" Margin="10" Padding="10" VerticalContentAlignment="Center"/>
            <Button Content="My Long String" Margin="10" Padding="10" VerticalContentAlignment="Bottom"/>
            <Button Content="My Long String" Margin="10" Padding="10" VerticalContentAlignment="Stretch" />
        </StackPanel>
    </Grid>
</Window>
