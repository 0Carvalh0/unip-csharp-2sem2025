<Window x:Class="aula05A.WrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aula05A"
        mc:Ignorable="d"
        Title="WrapPanel" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <WrapPanel Orientation="Horizontal" FlowDirection="LeftToRight" Grid.ColumnSpan="1" Grid.RowSpan="1">
            <Button Margin="10" Padding="10">Botão 1</Button>
            <Button Margin="10" Padding="10">Botão 2</Button>
            <Button Margin="10" Padding="10">Botão 3</Button>
            <Button Margin="10" Padding="10">Botão 4</Button>
            <Button Margin="10" Padding="10">Botão 5</Button>
            <Button Margin="10" Padding="10">Botão 6</Button>
            <Button Margin="10" Padding="10">Botão 7</Button>
        </WrapPanel>

        <WrapPanel Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="1">
            <Button Margin="10" Padding="10">Botão 1</Button>
            <Button Margin="10" Padding="10">Botão 2</Button>
            <Button Margin="10" Padding="10">Botão 3</Button>
            <Button Margin="10" Padding="10">Botão 4</Button>
            <Button Margin="10" Padding="10">Botão 5</Button>
            <Button Margin="10" Padding="10">Botão 6</Button>
            <Button Margin="10" Padding="10">Botão 7</Button>
        </WrapPanel>
    </Grid>
</Window>
